{
  // App part
  "apps" : [{
    "name"      : "loc-db",
    "script"    : "app.js",
    "append_env_to_name": true,
    "env_development": {
      "NODE_ENV": "development",
      "LOCDB_PORT": 3101,
      "LOCDB_DB_SCHEMA": "locdb-dev",
      "LOCDB_HOST": "locdb.bib.uni-mannheim.de",
      "LOCDB_BASEPATH": "/locdb-dev"
    },
    "env_production" : {
      "NODE_ENV": "production",
      "LOCDB_PORT": 3100,
      "LOCDB_DB_SCHEMA": "locdb-prod",
      "LOCDB_HOST": "locdb.bib.uni-mannheim.de",
      "LOCDB_BASEPATH": "/locdb"
    },
    "env_demo": {
      "NODE_ENV": "demo",
      "LOCDB_PORT": 3102,
      "LOCDB_DB_SCHEMA": "locdb-demo",
      "LOCDB_HOST": "locdb.bib.uni-mannheim.de",
      "LOCDB_BASEPATH": "/demo"
    }
  },
  {
    "name"      : "loc-db",
    "script"    : "./api/jobs/jobs.js",
    "append_env_to_name": true,
    "env_development": {
      "NODE_ENV": "development",
      "LOCDB_PORT": 3101,
      "LOCDB_DB_SCHEMA": "locdb-dev",
      "LOCDB_HOST": "locdb.bib.uni-mannheim.de",
      "LOCDB_BASEPATH": "/locdb-dev"
    },
    "env_production" : {
      "NODE_ENV": "production",
      "LOCDB_PORT": 3100,
      "LOCDB_DB_SCHEMA": "locdb-prod",
      "LOCDB_HOST": "locdb.bib.uni-mannheim.de",
      "LOCDB_BASEPATH": "/locdb"
    },
    "env_demo": {
      "NODE_ENV": "demo",
      "LOCDB_PORT": 3102,
      "LOCDB_DB_SCHEMA": "locdb-demo",
      "LOCDB_HOST": "locdb.bib.uni-mannheim.de",
      "LOCDB_BASEPATH": "/demo"
    }
  }],
  // Deployment part
  "deploy" : {
    "production" : {
      "user" : "anlausch",
      // Multi host is possible, just by passing IPs/hostname as an array
      "host" : "locdb",
      // Branch
      "ref"  : "origin/master",
      // Git repository to clone
      "repo" : "git@github.com:locdb/loc-db.git",
      // Path of the application on target servers
      "path" : "~/locdb-prod",
      "post-deploy" : "npm install && pm2 startOrRestart pm2.json --env production",
      // Environment variables that must be injected in all applications on this env
      "env"  : {
        "NODE_ENV": "production"
      }
    },
    "development" : {
      "user" : "anlausch",
      "host" : "locdb",
      "ref"  : "remotes/origin/datamodel",
      "repo" : "git@github.com:locdb/loc-db.git",
      "path" : "~/locdb-dev",
      "post-deploy" : "npm install && pm2 startOrRestart pm2.json --env development --output /dev/null --error /dev/null",
      "env"  : {
        "NODE_ENV": "development"
      }
    },
    "demo" : {
      "user": "anlausch",
      "host": "locdb",
      "ref": "origin/master",
      "repo": "git@github.com:locdb/loc-db.git",
      "path": "~/locdb-demo",
      "post-deploy": "npm install && pm2 startOrRestart pm2.json --env demo",
      "env": {
        "NODE_ENV": "demo"
      }
    }
  }
}